{
  "name": "diskprices",
  "version": "1.0.0",
  "description": "Hard Drive Price Comparison Website",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler publish",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && mkdir -p dist",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "cp -r src/frontend/* dist/",
    "build:worker": "webpack --config webpack.worker.js"
  },
  "dependencies": {
    "paapi5-nodejs-sdk": "^1.1.0",
    "itty-router": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "wrangler": "^3.0.0",
    "ts-loader": "^9.0.0"
  }
} 